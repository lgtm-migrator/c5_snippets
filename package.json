{
    "name": "concrete5-snippets",
    "displayName": "Concrete5 snippets",
    "description": "Concrete5 snippets",
    "publisher": "joeyjeantet",
    "version": "0.0.1",
    "engines": {
        "vscode": "^1.58.0"
    },
    "categories": [
        "Other",
        "Snippets"
    ],
    "activationEvents": [
        "*"
    ],
    "main": "./out/extension.js",
    "contributes": {
        "commands": [],
        "snippets": [
            {
                "language": "php",
                "path": "./snippets/php.json"
            },
            {
                "language": "html",
                "path": "./snippets/html.json"
            }
        ]
    },
    "icon": "images/icon.png",
    "repository": {
        "url": "https://github.com/pukafever/c5_snippets"
    },
    "scripts": {
        "compile": "tsc -p ./",
        "format": "prettier --write {snippets,src}/**/*",
        "lint": "eslint src --ext ts",
        "package": "vsce package",
        "pretest": "npm run compile && npm run lint",
        "test": "node ./out/test/runTest.js",
        "vscode:prepublish": "npm run compile",
        "watch": "tsc -watch -p ./"
    },
    "devDependencies": {
        "@types/glob": "^7.1.3",
        "@types/mocha": "^9.0.0",
        "@types/node": "14.x",
        "@types/vscode": "^1.58.0",
        "@typescript-eslint/eslint-plugin": "^4.26.0",
        "@typescript-eslint/parser": "^4.26.0",
        "eslint": "^7.27.0",
        "eslint-config-prettier": "^8.3.0",
        "glob": "^7.1.7",
        "mocha": "^8.4.0",
        "prettier": "^2.3.2",
        "typescript": "^4.3.2",
        "vsce": "^1.96.1",
        "vscode-test": "^1.5.2"
    }
}
